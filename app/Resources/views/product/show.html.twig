{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Isvisible</th>
                <td>{% if product.isVisible %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Isavailable</th>
                <td>{% if product.isAvailable %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Onstockamount</th>
                <td>{{ product.onStockAmount }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Introduction</th>
                <td>{{ product.introduction }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
